{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "angular-cli4"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "../dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index-jit.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "../config/tsconfig.app.json",
      "testTsconfig": "../config/tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "./assets/styles.css",
        "../node_modules/@covalent/core/common/platform.scss"
      ],
      "scripts": [],
      "environmentSource": "../config/environments/environment.ts",
      "environments": {
        "dev": "../config/environments/environment.ts",
        "prod": "../config/environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./config/protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "tsconfig.app.json"
    },
    {
      "project": "config/tsconfig.spec.json"
    },
    {
      "project": "e2e/tsconfig.e2e.json"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {},
    "serve": {
      "port": 4444
    }
  }
}
